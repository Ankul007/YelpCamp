<% include partials/header %>


<div class="container">
<header class="jumbotron">
    <div class="container">
    <h1>Campgrounds</h1>
    <p>View our handpicked campgrounds</p>
    <p><a class="btn btn-lg btn-primary " href="/index/new"> Add New Campground </a></p>
        </div>
</header>


    <div class="row" style=" display:flex; flex-wrap: wrap" >
        

    <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
            
            
            <image src=" <%= campground.image %> "></image>
            <div class="caption">
                <h4 style="text-align:center" >
                    <%=   campground.name  %>
                </h4>
            </div>
            <p>
                <a href="/index/<%= campground._id %>" class="btn btn-success  " > More info</a>
            </p>
            
            </div>
        </div>
        <% }); %>
    </div>
</div>
            <a href="/">back to homepage</a>
            <% include partials/footer %>